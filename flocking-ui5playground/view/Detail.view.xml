<?xml version="1.0" encoding="UTF-8" ?>
<core:View
    controllerName="fplay.controller.Detail"
    displayBlock="true"
    class="sapUiSizeCompact DetailView"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:zlib="zlib"
>
  <Page
      title="Flocking Interactive Playground"
      showNavButton="true"
      navButtonPress="onNavBack"
      enableScrolling="false"
  >
    <content>
      <Toolbar>
        <ToggleButton
            icon="sap-icon://hello-world"
            press="handleSayHelloWorld"
        />

        <ToolbarSpacer />

        <ToggleButton
            icon="sap-icon://play"
            press="handleStopPlay"
        />
      </Toolbar>

      <zlib:Codemirror
          id="jseditor"
          theme="solarized"
          mode="javascript"
          value="{
            path: 'examples>code',
            formatter: '.formatLoadedExample'
          }"
      />
    </content>
  </Page>
</core:View>
